<body>

    <div id="card">
        <div class="heart">‚ù§Ô∏è</div>
        <h1 id="question">Queres ser a minha Valentine?</h1>
        
        <div class="buttons" id="btnContainer">
            <button id="yesBtn">Sim!</button>
            <button id="noBtn">N√£o</button>
        </div>

        <div id="message">Sabia que ias dizer que sim! üòç‚ú®<br>Amo-te!</div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const message = document.getElementById('message');
        const question = document.getElementById('question');
        const btnContainer = document.getElementById('btnContainer');

        function moveButton() {
            // Calcula posi√ß√µes aleat√≥rias, mas mantendo o bot√£o dentro da √°rea vis√≠vel
            const padding = 20;
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth - padding);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight - padding);
            
            noBtn.style.position = 'fixed';
            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;
        }

        // Foge no PC (Rato)
        noBtn.addEventListener('mouseover', moveButton);

        // Foge no Telem√≥vel (Toque)
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Impede o clique acidental ao tocar
            moveButton();
        });

        // A√ß√£o ao clicar no "Sim"
        yesBtn.addEventListener('click', () => {
            question.style.display = 'none';
            btnContainer.style.display = 'none';
            message.style.display = 'block';
            document.body.style.backgroundColor = '#ffccd5';
        });
    </script>
